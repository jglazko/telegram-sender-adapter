{
  "name": "telegram-sender-adapter",
  "display_name": "Telegram notification Sender",
  "version": "0.0.2",
  "description": "Simple telegram sending actions. Needs to be configured with chatid and token.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "homepage": "https://github.com/ne0bot/telegram-sender-adapter",
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ne0bot/telegram-sender-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/ne0bot/telegram-sender-adapter"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "node_modules",
    "telegram-sender-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "token": "",
      "chatid": ""
    },
    "schema": {
      "type": "object",
      "required": [
        "token",
        "chatid"
      ],
      "properties": {
        "token": {
          "type": "string"
        },
        "chatid": {
          "type": "string"
        }
      }
    }
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.30.0",
    "telegraf": "^3.29.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0"
  }
}
